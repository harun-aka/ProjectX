@using Entities.DTOs
@model UserForRegisterDto;



@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Konuşarak Öğren</title>


    <link href="~/css/user.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
            {
                <div class="col-md-8 col-md-offset-2" id="panel">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 login_elements">
                            <div >
                            <h3>SIGN IN</h3>
                        </div>
                            <div class="row">
                                <div class="col-md-12 column">
                                    <input class="input-lg" type="text" name="FirstName" placeholder="First Name " id="firstname">
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger " })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 column">
                                    <input class="input-lg" type="text" name="LastName" placeholder="Last Name" id="lastname">
                                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger " })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 column">
                                    <input class="input-lg" type="Email" name="Email" placeholder="E-mail" id="email">
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            <div class="row">
                                <div class="col-md-12 column">
                                    <input class="input-lg" type="password" name="Password" placeholder="Password" id="password">
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <a href="@Url.Action("Login","Auth")" class="btn btn-danger"><strong>Back</strong></a>
                                </div>
                                <div class="col-md-3">
                                    <button class="btn btn-primary" type="submit" id="btnRegister"><strong>Register</strong></button>
                                </div>
                            </div>
                            @if (ViewBag.Error != null)
                            {
                                <div class="row">
                                    <div class="alert alert-danger">
                                        <strong>Lütfen</strong> @ViewBag.Error
                                    </div>

                                </div>
                            }

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script language="JavaScript" type="text/javascript" src="~/js/jquery-1.10.2.min.js"></script>
    <script language="JavaScript" type="text/javascript" src="~/js/modernizr-2.6.2.js"></script>
    <script language="JavaScript" type="text/javascript" src="~/js/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>


</body>
</html>
@using Entities.DTOs

@model UserForLoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Konuşarak Öğren</title>

    <link href="~/Assets/user.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

    <div class="row">
        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
        {
            <div class="col-md-8 ">

                <div class="row justify-content-center">
                    <div class="col-md-8  login_elements">
                        <div>
                            <h3>LOG IN</h3>
                        </div>
                        <div class="row">
                            <div class="col-md-12 column">
                                <input class="input-lg" type="text" name="Email" placeholder="E-mail" id="email">
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger " })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 column">
                                <input class="input-lg" type="password" name="Password" placeholder="Password" id="password">
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <a href="@Url.Action("Register","Auth")" class="btn btn-danger"><strong>Sign In</strong></a>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-primary" type="submit" id="btn_login"><strong>Log In</strong></button>
                            </div>
                        </div>
                        @if (ViewBag.Error != "" && ViewBag.Error != null)
                        {
                            if (ViewBag.Success != true)
                            {
                                <div class="row">
                                    <div class="alert alert-danger">
                                        <strong>@ViewBag.Error</strong>
                                    </div>

                                </div>
                            }
                            else
                            {
                                <div class="row">
                                    <div class="alert alert-success">
                                        <strong>@ViewBag.Error</strong>
                                    </div>

                                </div>
                            }
                        }

                    </div>
                </div>
            </div>
        }

    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>


</body>
</html>
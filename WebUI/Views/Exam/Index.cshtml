@using Entities.DTOs
@model List<ExamListDto>

@{
    ViewBag.Title = "Exams";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-12"><h2>Sınavlar</h2></div>

    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Başlık
                    </th>
                    <th>
                        Tarih
                    </th>
                    <th>
                        Sınav Giriş
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExamId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArticleTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExamCreationDate)
                        </td>
                        <td>
                            <a href="~/Exam/StartExam/@item.ExamId">Start Test</a>
                        </td>
                        <td>

                            @Html.ActionLink("Delete", "Delete", new { id = item.ExamId })
                        </td>
                    </tr>
                }

            </table>
        </div>

    </div>
